<h2>Notifications</h2>
<div class="notification-summary">
  <% @notifications&.each do |notification| %>

    <% if notification.notifiable_type == "FriendshipRequest" %>
      <%= render partial: 'friendship_requests/show',
                  locals: { request: notification.notifiable,
                            inverse_friend: notification.notifiable.user,
                            friendship_request_statuses: @friendship_request_statuses } %>
    <% elsif notification.notifiable_type == "Comment" && notification.notifiable&.commentable.is_a?(TextPost) %>
      <%= render partial: 'text_posts/summary', locals: { notification: notification } %>
    <% elsif notification.notifiable_type == "Comment" && notification.notifiable&.commentable.is_a?(PhotoPost) %>
      <%= render partial: 'photo_posts/summary', locals: { notification: notification } %>
    <% elsif notification.notifiable_type == "Like" &&  notification.notifiable&.likeable.is_a?(TextPost) %>
      <%= render partial: 'text_posts/summary', locals: { notification: notification } %>
    <% elsif notification.notifiable_type == "Like" &&  notification.notifiable&.likeable.is_a?(PhotoPost) %>
      <%= render partial: 'photo_posts/summary', locals: { notification: notification } %>
    <% end %>
  <% end %>
</div>
