<div class="comment-form">
  <%= form_with(model: [ commentable, Comment.new ]) do |f| %>

    <%= f.text_area :content, cols: 120, rows: 4 %>

    <%= button_tag :submit do %>
      <span class="material-icons">add</span>
      <span class="material-icons">forum</span>
    <% end %>
  <% end %>
</div>
