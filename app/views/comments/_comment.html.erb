<%= turbo_stream_from comment %>
<%= turbo_frame_tag comment do %>
  <div class="comment-container">
    <%= render partial: 'users/avatar', locals: { user: comment.author } %>
    <div class="comment-content">
      <div class="comment-heading">
        <div class="author-info">
          <p><strong><%= comment.author.full_name %></strong></p>
          <div class="comment-author-actions">
            <%= link_to edit_comment_path(comment), title: "Edit Comment"  do %>
              <span class="material-icons">edit</span>
            <% end %>
            <%= link_to comment_path(comment), method: 'delete', title: "Delete Comment"  do %>
              <span class="material-icons">delete</span>
            <% end %>
          </div>
        </div>
      </div>
      <p><%= comment.content %></p>
    </div>
  </div>
<% end %>
